<%- include('partials/header') %>
<main class="text-center py-4">

  <% if (locals.error) { %>
    <p><%= error %></p>
	
    <%# la partie 500 %>
    <h1>Mince...</h1>
    <p>Une erreur serveur sauvage est apparue... Réessaie plus tard 🙏</p>

    <% if (locals.stack) { %>
      <p>
        <pre>
          <%= stack %>
        </pre>
      </p>
      <% } %>
      
      <% if (error === 'La page demandée n\'existe pas') { %>
        <%# la partie 404 %>
        <h1>Oupsy ! Tu es perdu ?</h1>
        <p>La sortie, c'est par <a href="/">ici</a> !</p>
    <% } %>
  <% } %>
</main>


<%- include('partials/footer') %>
